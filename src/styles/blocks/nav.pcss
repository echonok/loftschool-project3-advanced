.nav {
  flex: 1 1 auto;
  &--header {
    max-width: 50%;
    @include tablets {
      display: none;
    }
  }
  &--footer {
    min-width: 65%;
    margin-bottom: 70px;
    @include tablets {
      display: flex;
    }
  }
}

.nav__list {
  display: flex;
  justify-content: space-between;
  &--footer  {
    @include tablets {
      flex-wrap: wrap;
      justify-content: flex-start;
    }
  }
}

.nav__item {
  cursor: pointer;
  margin-right: 60px;
  flex-basis: 15%;
  white-space: nowrap;
  &:last-child {
    margin-right: 0;
  }
  @include tablets {
    margin-right: 8%;
  }
}

.nav__link {
  text-decoration: none;
  color: $text-color;
  font-size: 16px;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: 1.88;
  letter-spacing: normal;
  text-align: left;
  &--footer {
    color: $text-color-white;
  }
  &:hover {
    font-weight: 600;
  }
}